{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "lib"
  },
  "include": ["./src/**/*"]
}
